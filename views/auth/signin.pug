extends ../layout.pug

block content
    div(id="login")
        div(class="container")
            if error
                p(class="alert error") #{error}

            h2 Login
            p(class="alert info") You can test with the accounts of <code>alice</code> and <code>bob</code> (passwords: <code>alice!</code> and <code>bob!</code>)

            div(class="thumbnail login")
                br
                form(method="post")
                    div(class="form-group")
                        label(for="username") Username
                        input(type="text" name="username" id="username" class="form-control" required)
                    
                    div(class="form-group")
                        label(for="password") Password
                        input(type="password" name="password" id="password" class="form-control" required)

                    input(type="submit" class="btn btn-default" value="Login")
        
                br
                p Need an account?&nbsp;
                    a(href="/signup") Signup